---
import '@fontsource/jetbrains-mono';
import { CONTAINER } from 'src/lib/constant';

export interface Props {
  tagline?: string;
  about: string;
}

const { tagline, about } = Astro.props as Props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const title = !tagline ? 'Jeremy Zabala - Developer' : tagline;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/styles/global.css" />

    <link
      rel="shortcut icon"
      href='data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" 
    viewBox="0 0 100 100"><text y=".9em" font-size="90">ðŸ’»</text></svg>'
    />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={about} />
    <meta name="theme-color" content="#000" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={about} />
    <meta property="og:image" content={`${Astro.site}banner.png`} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={about} />
    <meta property="twitter:image" content={`${Astro.site}banner.png`} />
  </head>

  <body class="bg-black text-white font-body">
    <main class={`${CONTAINER} m-auto flex flex-col md:p-12 p-6`}>
      <slot />
    </main>
  </body>
</html>

<script>
  import { inject } from '@vercel/analytics';
  inject();
</script>
